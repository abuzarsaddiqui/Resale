@{
    Layout = null;
}

<br/>
<br/>
<table class="table" style="width: 80%; ">
    <thead>
        <tr>
            <th>E-mail</th>
            <th>Title</th>
            <th>Sold</th>
            <th>Options</th>

        </tr>
    </thead>

    <tbody>

        @{



            foreach (var obj in ViewBag.Ads)
            {
                <tr id=@obj.Ad.adId>
                    <th scope="row" style="vertical-align: middle;"> @obj.User.email</th>
                    <td style="width: 80%; word-break: break-all; vertical-align: middle;">@obj.Ad.title</td>
                    <td style="width: 10%; vertical-align: middle;">
                        <span style=" margin-right:3%; font-size:large; ">

                            @{
                if (obj.Ad.sold == 1)
                {
                    <i class="fa fa-check" style="color:green;"></i>

                }
                else
                {
                    <i class="fa fa-times" style="color:red;"></i>

                }
                            }
                        </span>
                    </td>
                    <td style="width: 20%; vertical-align: middle;">
                        <span style="margin-right: 3%; font-size: large; ">
                            <a onclick="viewAd(@obj.Ad.adId)" href="" data-toggle="modal" data-target="#mySingleModal"><i class="fa fa-eye" style="color:green;"></i></a>

                            <a onclick="Delete(@obj.Ad.adId)"> <i class="fa fa-trash" style="color:red; padding-left:10px; "></i></a>
                        </span>
                    </td>


                </tr>
            }
        }


    </tbody>
</table>