    @model EAD_Project.Models.user
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";   
   
}
    <section>
        <div id="page-wrapper" class="sign-in-wrapper">
            <div class="graphs">
                <div class="sign-up">
                    <h1>Create an account</h1>
                    <p class="creating">
                        Having hands on experience in creating innovative designs,I do offer design
                        solutions which harness.
                    </p>
                    <h2>Personal Information</h2>

                    <form method="post" action="~/User/Register">
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Email Address* :</h4>
                            </div>
                            <div class="sign-up2">
                               
                                <input type="text" name="email" onkeyup="EmailExist()" id="email"  placeholder="E-mail" required="true" />
                                <span class="alert alert-danger" id="emailError" hidden="true"> <span class="glyphicon glyphicon-exclamation-sign"></span><strong>       E-Mail Already Exist</strong></span>
                                
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                       
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Name* :</h4>
                            </div>
                            <div class="sign-up2">
                                    <input type="text" name="name" placeholder="Name" required="true" />
                                                           </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Address* :</h4>
                            </div>
                            <div class="sign-up2">
                                    <input type="text" name="address" placeholder="Address" required="true" />
                               
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Password* :</h4>
                            </div>
                            <div class="sign-up2">
                                <input type="password" name="password" id="password" required="true" placeholder="Password" />
                               
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Confirm Password* :</h4>
                            </div>
                            <div class="sign-up2">
                                <input type="password" name="confirmPassword" id="confirmPassword" onfocusout="passwordValidate()" class="lock" placeholder="Password" required="true" />
                                <span class="alert alert-danger" id="confirmPasswordError" hidden="true"> <span class="glyphicon glyphicon-exclamation-sign"></span><strong>       Passwords Must Match</strong></span>

                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Phone Number* :</h4>
                            </div>
                            <div class="sign-up2">
                                <input type="text" name="phone" placeholder="xxxxxxx" required="true" />

                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sub_home">
                            <div class="sub_home_left">

                                <input type="submit" value="Register" onclick="return Validate()" id="regButton">

                            </div>
                        </div>

                    </form>

                    <div class="sub_home_right">
                        <p>Go Back to <a href="~/Home/Index">Home</a></p>
                    </div>
                    <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
        
        </section>
  