    <script type="text/javascript">
        var userDivs = ['postAd', 'viewAds'];
        var adminDivs = ['contentManagement', 'userVerification', 'siteManagement'];
        var Divs = null;


        function toggleVisibility(divId) {
            var check = $.inArray(divId, userDivs);
            var check1 = $.inArray(divId, adminDivs);
            if (check >= 0)
                Divs = userDivs;
            if(check1 >= 0) {
                Divs = adminDivs;
                console.log("in admin divs");
            }
                

            var i;
            for (i = 0; i < Divs.length; i++) {
                var div = document.getElementById(Divs[i]);
                if (divId === Divs[i])
                    div.style.display = "block";
                else
                    div.style.display = "none";
            }
        }
    </script>

    <script type="text/javascript">
       
        function toggleAdminVisibility(divId) {
            var adminDivs = ['contentManagement', 'userVerification', 'siteManagement'];

            var i;
            for (i = 0; i < adminDivs.length; i++) {
                
                if (divId === adminDivs[i]) {
                    $('#' + divId).show();
                }
                else {
                    $('#' + adminDivs[i]).hide();
                }
            }
        }
    </script>
