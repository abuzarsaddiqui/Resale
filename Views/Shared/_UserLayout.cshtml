    <script type="text/javascript">
        function passwordValidate() {
            var passwd = document.getElementById("password").value;
            var confrmPasswd = document.getElementById("confirmPassword").value;
            if (passwd == confrmPasswd) {
                document.getElementById("confirmPasswordError").hidden = true;

            }
            else {
                document.getElementById("confirmPasswordError").hidden = false;
                document.getElementById("confirmPassword").value = "";
                
            }

        }
    </script>
    <script type="text/javascript">
        function EmailExist() {
        
            
                var email = $('#email').val();
                var obj = { "email": email };
                var settings = {
                    type: "POST",
                    dataType: "json",
                    url: "IsExist",
                    data: obj,
                    success: function (resp) {
                        if (resp.isExist == true) {
                            document.getElementById("emailError").hidden = false;
                            document.getElementById("regButton").hidden = true;

                        }
                        else {
                            document.getElementById("emailError").hidden = true;
                            document.getElementById("regButton").hidden = false;
                        }
                    },
                    error: function () {
                        
                    }

                };
                $.ajax(settings);
            }
       
    </script>

